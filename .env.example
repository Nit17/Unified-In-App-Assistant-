# Development Environment
NODE_ENV=development
PORT=5000

# Database (for future use)
# DATABASE_URL=postgresql://username:password@localhost:5432/assistant_db

# API Keys (for future integrations)
# OPENAI_API_KEY=your_openai_key_here
# SLACK_BOT_TOKEN=your_slack_token_here

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400000

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_TICKET_SIMULATION=true
ENABLE_ANALYTICS=false

# LLM (Local or OpenAI-compatible)
# To enable local LLM parsing of intents, set LLM_ENABLED=true and choose a provider.
LLM_ENABLED=false
LLM_PROVIDER=ollama            # ollama | openai

# Ollama config (local, privacy-first)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1          # e.g., llama3.1, qwen2, phi3, mistral

# OpenAI-compatible config (LM Studio / OpenRouter / Azure OpenAI)
OPENAI_BASE_URL=http://localhost:1234/v1
OPENAI_API_KEY=sk-your-local-or-remote-key
OPENAI_MODEL=gpt-3.5-turbo

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log